{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Abrir con Live Server",
            "url": "http://127.0.0.1:5500/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Open Live Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Abrir archivo directamente",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        }
    ]
}